---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import Card from '@/components/Card.astro'
---

<BaseLayout
  title="{{PROJECT_NAME_PASCAL}} - Welcome"
  description="A modern static site built with Astro 5.0"
>
  <Header />

  <main class="container mx-auto px-4 py-16">
    <!-- Hero Section -->
    <section class="mb-24 text-center">
      <h1 class="mb-6 text-5xl font-bold">Welcome to {{PROJECT_NAME_PASCAL}}</h1>
      <p class="mx-auto mb-8 max-w-2xl text-xl text-gray-600">
        A lightning-fast static site built with Astro 5.0. Zero JavaScript by
        default, optimized for performance and SEO.
      </p>
      <div class="flex justify-center gap-4">
        <a
          href="/blog"
          class="rounded-lg bg-blue-600 px-6 py-3 font-semibold text-white hover:bg-blue-700"
        >
          Read Blog
        </a>
        <a
          href="/docs"
          class="rounded-lg border border-gray-300 px-6 py-3 font-semibold hover:bg-gray-50"
        >
          Documentation
        </a>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="mb-24">
      <h2 class="mb-12 text-center text-3xl font-bold">Features</h2>
      <div class="grid gap-8 md:grid-cols-3">
        <Card
          title="Zero JavaScript"
          description="Ship HTML and CSS only. Add JavaScript when you need it with Astro Islands."
        />
        <Card
          title="Type-Safe Content"
          description="Content Collections provide type safety and validation for your content."
        />
        <Card
          title="SEO Optimized"
          description="Automatic sitemaps, RSS feeds, and meta tags for better search rankings."
        />
        <Card
          title="Lightning Fast"
          description="100/100 Lighthouse scores out of the box. Optimized for Core Web Vitals."
        />
        <Card
          title="Markdown & MDX"
          description="Write content in Markdown or MDX with full component support."
        />
        <Card
          title="Tailwind CSS"
          description="Utility-first CSS framework for rapid UI development."
        />
      </div>
    </section>

    <!-- CTA Section -->
    <section class="rounded-lg bg-blue-50 p-12 text-center">
      <h2 class="mb-4 text-3xl font-bold">Ready to Get Started?</h2>
      <p class="mb-6 text-lg text-gray-600">
        Explore the blog or dive into the documentation.
      </p>
      <a
        href="/blog"
        class="inline-block rounded-lg bg-blue-600 px-8 py-3 font-semibold text-white hover:bg-blue-700"
      >
        Explore Blog
      </a>
    </section>
  </main>

  <Footer />
</BaseLayout>
